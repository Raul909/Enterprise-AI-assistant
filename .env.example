# Enterprise AI Assistant - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="Enterprise AI Assistant"
ENVIRONMENT=development
DEBUG=false
LOG_FORMAT=text  # Use 'json' for production

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=enterprise_ai
DATABASE_URL=postgresql+asyncpg://postgres:your-secure-password@localhost:5432/enterprise_ai

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI PROVIDERS
# =============================================================================
# Choose provider: 'openai' or 'anthropic'
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000

# Anthropic Configuration (alternative)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# MCP SERVER
# =============================================================================
MCP_SERVER_URL=http://localhost:3333
MCP_TIMEOUT_SECONDS=30

# =============================================================================
# VECTOR STORE
# =============================================================================
VECTOR_STORE_PATH=./vector-store
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_SEARCH_TOP_K=5

# =============================================================================
# REDIS (optional)
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
